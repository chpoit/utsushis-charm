    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node encoder",
            "program": "${workspaceFolder}/js_encoder.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "args": [
                "charms.single.json"
            ]
        },
        {
            "name": "Node encoder",
            "program": "${workspaceFolder}/js_encoder.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "args": [
                "charms.single.json"
            ]
        },
        {
            "name": "Frame Extraction",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "--skip-charms"
            ]
        },
        {
            "name": "Charm Extraction",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "--skip-frames"
            ]
        },
        {
            "name": "Debug Charm Extraction",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "--skip-frames",
                "--frames",
                "debug-frames"

            ]
        }
    ]
}